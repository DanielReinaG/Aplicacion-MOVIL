<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Views.ADMIN.VISTAS.InicioPrincipal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_3"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewInicioPrincipal"
            android:layout_margin="10dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/logoburgues" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textNameInicioPrincipal"
                android:layout_width="match_parent"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="@string/app_name" />

            <TextView
                android:id="@+id/textLocationInicioPrincipal"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="16dp"
                android:layout_height="wrap_content"
                android:text="Call 26 N° 15-35 7 Agosto" />

            <TextView
                android:id="@+id/textReservationInicioPrincipal"
                android:layout_width="match_parent"
                android:textColor="@color/dorado"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="16dp"
                android:layout_height="wrap_content"
                android:text="Reservas 3143063807" />

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_3"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewInstalacionesInicPrin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="22dp"
                        android:text="INSTALACIONES"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="9dp">

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"/>
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_3"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewMenuInicPrin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="22dp"
                        android:text="MENÚ"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="9dp">

                        <ImageView
                            android:id="@+id/imageViewMenuInicPrinc"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/logoburgues" />

                        <ImageView
                            android:id="@+id/imageView2MenuInicPrinc"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/logoburgues" />

                        <ImageView
                            android:id="@+id/imageView3MenuInicPrinc"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/logoburgues" />

                        <ImageView
                            android:id="@+id/imageView4MenuInicPrinc"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/logoburgues" />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_3"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewCoctelesInicPrin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="22dp"
                        android:text="COCTELES"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="9dp">

                        <ImageView
                            android:id="@+id/imageViewCoctelesInicPrin"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/logoburgues" />

                        <ImageView
                            android:id="@+id/imageView2CoctelesInicPrin"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/logoburgues" />

                        <ImageView
                            android:id="@+id/imageView3CoctelesInicPrin"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/logoburgues" />

                        <ImageView
                            android:id="@+id/imageView4CoctelesInicPrin"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/logoburgues" />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>